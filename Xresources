URxvt*saveLines: 5000
URxvt*borderless: true


! Font
URxvt.font: xft:inconsolata:size=11:antialias=true:hinting=true
urxvt.boldFont: xft:inconsolata:size=11:antialias=true:hinting=true

!! URxvt.font: xft:mono:size=10:antialias=true
!! URxvt.letterSpace: -1


! Scrollback position
URxvt*scrollBar: false
URxvt*scrollTtyOutput: false
URxvt*scrollTtyKeypress: true
URxvt*scrollWithBuffer: true
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0


! Perl extensions
URxvt.perl-ext-common: default,matcher,keyboard-select,clipboard
URxvt.perl-ext: default,url-select

! matcher (open urls with mouse click)
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

! clipboard
! update clipboard whenever primary gets updated
URxvt.clipboard.autocopy: true
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped

! url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true
